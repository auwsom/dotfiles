0 2 * * * cronic /home/user/dotfiles/crontab/snap_clean.sh         # daily at 02:00
0 4 * * * cronic /home/user/dotfiles/crontab/clamscan_daily.sh         # daily at 04:00

# @reboot does this during restart:
#@reboot sleep 300; /usr/bin/mount -a
